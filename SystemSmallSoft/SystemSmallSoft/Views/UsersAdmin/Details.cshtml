
@model IdentitySample.Models.ApplicationUser

@{
    Layout = null;
}


<!------------      ------------>
    <div class="card-body">
        <div class="card-title">
            <h3 class="text-center title-2 display-4">Detalles del Usuario</h3>
        </div>
        <hr>

        <!------------      ------------>


        <div class="form-group">
            <br />

            <dl class="dl-horizontal">
                <dt>
                    Nombre de usuario
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.UserName)
                </dd>

            </dl>

        </div>
        <!------------      ------------>

        <h4>Lista de Roles</h4>
        @if (ViewBag.RoleNames.Count == 0)
        {
            <hr />
            <p>No se encontro un rol para este usuario.</p>
        }

        <table class="table">

            @foreach (var item in ViewBag.RoleNames)
            {
                <tr>
                    <td>
                        @item
                    </td>
                </tr>
            }
        </table>


    </div>
<!------------      ------------>




