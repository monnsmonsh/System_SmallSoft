@model IEnumerable<SystemSmallSoft.Models.TblCliente>

@{
    ViewBag.Title = "Clientes";
    <!---->ViewBag.ClientesA = "active";
}
<!-- modal large -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="largeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="largeModalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="modal-content">
                    <!---->
                    Cargando...
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<!-- end modal large -->

<div class="jumbotron" style="background-image: url(/Content/img/about-service.png); background-size: 100%;">
    <div class="container">
        <h1 class="display-3" _msthash="669669" _msttexthash="169715" style="color:dimgrey;">Clientes</h1>

    </div>
</div>


@if (Request.IsAuthenticated && User.IsInRole("Admin"))
{
    <a class="btn btn-primary btn-lg" href="~/Clientes/Create" role="button"><i class=" fa fa-plus"> </i> Registrar cliente nuevo</a>
}
@if (Request.IsAuthenticated && User.IsInRole("Mostrador"))
{
    <a class="btn btn-primary btn-lg" href="~/Clientes/Create" role="button"><i class=" fa fa-plus"> </i> Registrar cliente nuevo</a>
}


<br>
<br>

<table id="tblListClientes" class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Nombre</th>

            <th scope="col">
                @Html.DisplayNameFor(model => model.RFC)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ApPaterno) @Html.DisplayFor(modelItem => item.ApMaterno) @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RFC)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a href="~/Clientes/Edit/@item.ClienteID" class="btn btn-danger btn-sm" style="background-color: #007bba; border-color: #007bba;"><i class=" fa fa-pencil-square-o"></i></a>

                    <button href="#myModal" class="btnDetailsCliente btn btn-danger btn-sm" data-toggle="modal" data-id="@item.ClienteID" style="background-color: #28a745; border-color: #28a745;">
                        <i class="fa fa-list-alt"></i>
                    </button>
                    
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <button href="#myModal" class="btnDeleteCliente btn btn-danger btn-sm" data-toggle="modal" data-id="@item.ClienteID">
                            <i class="fa fa-trash"></i>
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>

</table>




