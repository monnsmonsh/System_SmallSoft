@model IdentitySample.Models.RoleViewModel

@{
    ViewBag.Title = "Nuevo Rol";
    <!---->ViewBag.UsuariosA = "active";
}

<br />

<!------------      ------------>
<div class="card-body ">
    <div class="card-title col-md-10">
        <h3 class="text-center title-2 display-4">Registrar nuevo rol</h3>
    </div>
    <hr class="col-md-10">

    <!------------      ------------>

    @using (Html.BeginForm("Create", "UsersAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                    <i class="fa fa-lock fa-lg"></i>&nbsp;
                    <span id="payment-button-amount">Guardar</span>
                    <span id="payment-button-sending" style="display:none;">Sending…</span>
                </button>
            </div>
        </div>
    }



</div>
<!------------      ------------>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
